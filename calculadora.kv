
<CustButton@Button>:
    font_size: 32
  

<CalcGridLayout>:
    id: calculadora
    display: entry
    rows: 7
    padding: 10
    spacing: 10
     
  
    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
            halign: "right"
            

    BoxLayout:
        spacing: 10
        CustButton:
            text: "BIN"
            on_press: calculadora.binario(entry.text)
        CustButton:
            id: btn_A
            text: "A"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            id: btn_B
            text: "B"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            id: btn_C
            text: "C"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            text: "AC"
            on_press: entry.text = ""
    
    BoxLayout:
        spacing: 10
        CustButton:
            text: "OCT"
            on_press: calculadora.octal(entry.text)
        CustButton:
            id: btn_D
            text: "D"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            id: btn_E
            text: "E"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            id: btn_F
            text: "F"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            text: "/"
            on_press: entry.text += self.text
  
    BoxLayout:
        spacing: 10
        CustButton:
            text: "DEC"
            on_press: calculadora.decimal(entry.text)
        CustButton:
            id: btn_9
            text: "9"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            id: btn_8
            text: "8"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            id: btn_7
            text: "7"
            on_press: entry.text += self.text
        CustButton:
            text: "*"
            on_press: entry.text += self.text
  
    BoxLayout:
        spacing: 10
        CustButton:
            text: "HEX"
            on_press: calculadora.hexadecimal(entry.text)
        CustButton:
            id: btn_6
            text: "6"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            id: btn_5
            text: "5"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            id: btn_4
            text: "4"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            text: "-"
            on_press: entry.text += self.text
  
  
    BoxLayout:
        spacing: 10
        CustButton:
            text: "("
            on_press: entry.text += self.text
        CustButton:
            id: btn_3
            text: "3"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            id: btn_2
            text: "2"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            id: btn_1
            text: "1"
            disable: False
            on_press: entry.text += self.text
        CustButton:
            text: "+"
            on_press: entry.text += self.text
    BoxLayout:
        spacing: 10
        CustButton:
            text: ")"
            on_press: entry.text += self.text
        CustButton:
            id: btn_ponto
            text: "."
            disable: False
            on_press: entry.text += self.text
        CustButton:
            text: "0"
            on_press: entry.text += self.text
        CustButton:
            text: u"\u00AB"
            on_press: calculadora.remover()
        CustButton:
            text: "="
            on_press: calculadora.calculate(entry.text)
    